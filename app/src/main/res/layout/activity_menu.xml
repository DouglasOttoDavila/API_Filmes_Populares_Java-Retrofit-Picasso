<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_bkg2"
    tools:context="com.uniritter.to100ideia.ui.menu.MenuActivity">

    <Button
        android:id="@+id/filmesRecentesBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="+ Recentes"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/filmesPopularesBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/filmesPopularesBtn"
        app:layout_constraintTop_toBottomOf="@+id/filmesPopularesBtn" />

    <Button
        android:id="@+id/filmesPopularesBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:text="+ Populares"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/menuTxt"
        app:layout_constraintStart_toStartOf="@+id/menuTxt"
        app:layout_constraintTop_toBottomOf="@+id/menuTxt" />

    <Button
        android:id="@+id/emBreveBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Lançamentos em breve..."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/filmesRecentesBtn"
        app:layout_constraintStart_toStartOf="@+id/filmesRecentesBtn"
        app:layout_constraintTop_toBottomOf="@+id/filmesRecentesBtn" />

    <TextView
        android:id="@+id/menuTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/dispMoveisJeanPaul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/alata"
        android:text="Computação para Dispositivos Móveis - Prof. Jean Paul (Uniritter)"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/ritterLogo"
        app:layout_constraintStart_toEndOf="@+id/ritterLogo" />

    <TextView
        android:id="@+id/creditoFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/alata"
        android:text="Criado por Douglas Otto D'Avila - Abr/2023"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/ritterLogo"
        app:layout_constraintTop_toTopOf="@+id/ritterLogo" />

    <ImageView
        android:id="@+id/theMovieDbLogo"
        android:layout_width="83dp"
        android:layout_height="26dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/tmdb" />

    <ImageView
        android:id="@+id/ritterLogo"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/uniritter" />

</androidx.constraintlayout.widget.ConstraintLayout>